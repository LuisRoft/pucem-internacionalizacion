---
interface Props {
  title: string;
  image: string; // pass image.src
  buttonText?: string;
}

const { title, image, buttonText = 'POSTULATE!' }: Props = Astro.props as Props;
---

<section class="hero" style={`background-image: url(${image});`}>
  <div class="hero__content">
    <h1 class="hero__title">{title}</h1>
    <a href="#" class="hero__cta">{buttonText}</a>
    <div class="hero__extra">
      <slot name="extra" />
    </div>
  </div>
</section>

<style>
  /* Prevent horizontal overflow */
  .hero {
    overflow-x: hidden;
  }

  .hero {
    position: relative;
    width: 100%;
    min-height: 100svh;
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
    isolation: isolate;
  }

  .hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.45);
    z-index: -1;
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 0 20px;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .hero__title {
    margin: 0;
    color: white;
    max-width: 1200px;
    width: 100%;
    text-transform: uppercase;
    font-weight: 800;
    line-height: 1.1;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    word-wrap: break-word;
    hyphens: auto;
    -webkit-hyphens: auto;
    -moz-hyphens: auto;
    /* Base size for desktop - more prominent */
    font-size: clamp(4rem, 10vw, 5.5rem);
    letter-spacing: 4px;
  }

  .hero__cta {
    display: inline-block;
    padding: 16px 32px;
    border-radius: 12px;
    color: #ffffff;
    text-decoration: none;
    background: rgba(226, 226, 226, 0.2);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    font-weight: 700;
    text-transform: uppercase;
    transition: all 0.3s ease;
    border: 2px solid rgba(255, 255, 255, 0.3);
    min-width: fit-content;
    white-space: nowrap;
    margin-top: 30px;
  }

  .hero__cta:hover {
    background: rgba(226, 226, 226, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }


  .hero__extra {
    margin-top: 24px;
    display: flex;
    justify-content: center;
    width: 100%;
    max-width: 100%;
  }

  /* Responsive Design - Desktop First */
  @media (max-width: 1200px) {
    .hero__content {
      padding: 0 24px;
    }

    .hero__title {
      font-size: clamp(3rem, 8vw, 5.5rem);
      letter-spacing: 3.5px;
    }
  }

  @media (max-width: 1024px) {
    .hero__content {
      padding: 0 20px;
    }

    .hero__title {
      font-size: clamp(2.8rem, 7vw, 4.8rem);
      letter-spacing: 3px;
    }

    .hero__cta {
      padding: 14px 28px;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 768px) {
    .hero__content {
      padding: 0 16px;
      gap: 20px;
    }

    .hero__title {
      font-size: clamp(2.2rem, 6vw, 3.5rem);
      letter-spacing: 2.5px;
      max-width: 100%;
    }

    .hero__cta {
      padding: 12px 24px;
      font-size: 0.85rem;
      letter-spacing: 0.5px;
      border-radius: 10px;
    }

    .hero__extra {
      margin-top: 20px;
    }
  }

  @media (max-width: 640px) {
    .hero__content {
      padding: 0 16px;
      gap: 18px;
    }

    .hero__title {
      font-size: clamp(2rem, 5.5vw, 3rem);
      letter-spacing: 2px;
      line-height: 1.15;
    }

    .hero__cta {
      padding: 12px 20px;
      font-size: 0.8rem;
      letter-spacing: 0.5px;
      width: 100%;
      max-width: 280px;
      text-align: center;
    }

    .hero__extra {
      margin-top: 18px;
    }
  }

  @media (max-width: 480px) {
    .hero {
      min-height: 90svh;
    }

    .hero__content {
      padding: 0 12px;
      gap: 16px;
    }

    .hero__title {
      font-size: clamp(1.8rem, 5vw, 2.5rem);
      letter-spacing: 1.5px;
      line-height: 1.2;
    }

    .hero__cta {
      padding: 10px 16px;
      font-size: 0.75rem;
      letter-spacing: 0.5px;
      max-width: 240px;
      border-radius: 8px;
    }

    .hero__extra {
      margin-top: 16px;
    }
  }

  @media (max-width: 360px) {
    .hero__content {
      padding: 0 10px;
      gap: 14px;
    }

    .hero__title {
      font-size: clamp(1.6rem, 4.5vw, 2.2rem);
      letter-spacing: 1px;
      line-height: 1.25;
    }

    .hero__cta {
      padding: 8px 14px;
      font-size: 0.7rem;
      letter-spacing: 0.3px;
      max-width: 200px;
      border-radius: 6px;
    }

    .hero__extra {
      margin-top: 14px;
    }
  }

  /* High DPI screens */
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    .hero__title {
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.7);
    }
  }

  /* Reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .hero__cta {
      transition: none;
    }

    .hero__cta:hover {
      transform: none;
    }
  }

  /* Print styles */
  @media print {
    .hero {
      min-height: auto;
      background: #f8f9fa;
    }

    .hero::after {
      background: rgba(0, 0, 0, 0.1);
    }

    .hero__title {
      color: #000;
      font-size: 2rem;
      letter-spacing: 1px;
    }

    .hero__cta {
      display: none;
    }
  }
</style>


