</Layout>

<style>
	/* Prevent horizontal overflow */
	html, body {
		overflow-x: hidden;
		width: 100%;
		max-width: 100%;
		margin: 0;
		padding: 0;
	}

	* {
		box-sizing: border-box;
	}

	/* Ensure no element causes horizontal overflow */
	img, video, canvas, svg {
		max-width: 100%;
		height: auto;
	}

	/* Fix for any potential grid or flexbox issues */
	.about-content,
	.team-member,
	.team-grid {
		min-width: 0;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 24px;
		width: 100%;
	}

	/* About Section */
	.about-section {
		padding: 80px 0;
		background: #ffffff;
	}

	.about-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 60px;
		align-items: center;
	}

	.about-image img {
		width: 100%;
		height: auto;
		border-radius: 16px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
	}

	.about-text h2 {
		color: #2c3e50;
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 800;
		margin: 0 0 20px;
		letter-spacing: 1px;
	}

	.about-text p {
		color: #6c757d;
		font-size: 1.3rem;
		line-height: 1.6;
		margin-bottom: 16px;
	}

	.about-text p:last-child {
		margin-bottom: 0;
	}

	/* Mission Section */
	.mission-section {
		padding: 60px 0;
		background: #ffffff;
	}

	.mission-section h2 {
		color: #2c3e50;
		font-size: clamp(2rem, 4vw, 2.5rem);
		font-weight: 800;
		margin: 0 0 20px;
		letter-spacing: 1px;
	}

	.mission-section p {
		color: #495057;
		font-size: 1.3rem;
		line-height: 1.7;
		text-align: justify;
	}

	/* Vision Section */
	.vision-section {
		padding: 60px 0;
		background: #ffffff;
	}

	.vision-section h2 {
		color: #2c3e50;
		font-size: clamp(2rem, 4vw, 2.5rem);
		font-weight: 800;
		margin: 0 0 20px;
		letter-spacing: 1px;
	}

	.vision-section p {
		color: #495057;
		font-size: 1.3rem;
		line-height: 1.7;
		text-align: justify;
	}

	/* Normativas Procedimentales Section */
	.normativas-section {
		padding: 80px 0;
		background: #ffffff;
	}

	.normativas-header {
		display: flex;
		align-items: center;
		gap: 40px;
		margin-bottom: 50px;
	}

	.normativas-header h2 {
		color: #2c3e50;
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 800;
		margin: 0;
		letter-spacing: 1px;
		line-height: 1.2;
	}

	.arrow-icon {
		font-size: 3rem;
		color: #2c3e50;
		font-weight: bold;
	}

	.normativas-carousel {
		overflow: hidden;
		position: relative;
	}

	.carousel-container {
		overflow-x: auto;
		padding: 10px 0;
		scrollbar-width: none; /* Firefox */
		-ms-overflow-style: none; /* IE and Edge */
	}

	.carousel-container::-webkit-scrollbar {
		display: none; /* Chrome, Safari, Opera */
	}

	.carousel-track {
		display: flex;
		gap: 30px;
		padding-bottom: 10px;
		padding-left: 10px;
		min-width: fit-content;
	}

	.normativas-card {
		flex: 0 0 280px;
		height: 400px;
		border-radius: 16px;
		position: relative;
		overflow: hidden;
		display: flex;
		align-items: flex-end;
		padding: 20px;
		cursor: pointer;
		transition: transform 0.3s ease;
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
	}

	.normativas-card:hover {
		transform: scale(1.05);
	}

	.normativas-card::before {
		content: '';
		position: absolute;
		inset: 0;
		background: rgba(0, 0, 0, 0.4);
		z-index: 1;
	}



	.normativas-card h3 {
		color: #ffffff;
		font-size: 1.5rem;
		font-weight: 700;
		margin: 0;
		position: relative;
		z-index: 2;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
	}

	/* Team Section */
	.team-section {
		padding: 80px 0;
		background: #1e3a8a;
		color: white;
	}

	.team-section h2 {
		color: white;
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 800;
		margin: 0 0 50px;
		letter-spacing: 1px;
		text-align: center;
	}

	.team-content {
		max-width: 1200px;
		margin: 0 auto;
	}

	.team-member {
		display: grid;
		grid-template-columns: 300px 1fr;
		gap: 50px;
		align-items: center;
	}

	.member-image {
		display: flex;
		justify-content: center;
	}

	.member-image img {
		max-width: 100%;
		height: auto;
		object-fit: cover;
		border-radius: 20px;
	}

	.member-info h3 {
		color: white;
		font-size: 2.2rem;
		font-weight: 800;
		margin: 0 0 8px;
	}

	.member-info h4 {
		color: #93c5fd;
		font-size: 1.3rem;
		font-weight: 600;
		margin: 0 0 25px;
	}

	.member-info p {
		color: #e5e7eb;
		font-size: 1.2rem;
		line-height: 1.6;
		margin-bottom: 16px;
	}

	/* Team Showcase Section */
	.team-showcase-section {
		padding: 80px 0;
		background: #ffffff;
	}

	.team-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 30px;
		max-width: 100%;
		margin: 0 auto;
	}

	.team-card {
		display: flex;
		align-items: center;
		gap: 25px;
		padding: 30px;
		border-radius: 25px;
		color: white;
		transition: all 0.3s ease;
		min-height: 160px;
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
	}

	.team-card:hover {
		transform: scale(1.03);
		box-shadow: 0 12px 35px rgba(0, 0, 0, 0.25);
	}

	.team-card-blue {
		background: #00A0DB;
	}

	.team-card-dark {
		background: #0C4D8A;
	}

	.placeholder-avatar {
		background: #9ca3af;
		width: 170px;
		height: 170px;
		border-radius: 50%;
		flex-shrink: 0;
		object-fit: cover;
	}

	.team-card-content h3 {
		font-size: 1.8rem;
		font-weight: 800;
		margin: 0 0 8px;
		color: white;
		letter-spacing: 0.5px;
	}

	.team-card-content h4 {
		font-size: 1.1rem;
		font-weight: 600;
		margin: 0 0 15px;
		color: rgba(255, 255, 255, 0.85);
		letter-spacing: 0.3px;
	}

	.team-card-content p {
		font-size: 1rem;
		line-height: 1.5;
		margin: 0;
		color: rgba(255, 255, 255, 0.95);
	}

	/* Responsive Design */
	@media (max-width: 480px) {
		.container {
			padding: 0 16px;
		}

		.normativas-card {
			flex: 0 0 250px;
			height: 350px;
		}

		.carousel-track {
			padding-left: 5px;
			gap: 20px;
		}

		.about-text p {
			font-size: 1.1rem;
		}

		.mission-section p,
		.vision-section p {
			font-size: 1.1rem;
		}
	}

	@media (max-width: 435px) {
		.container {
			padding: 0 12px;
		}

		.normativas-card {
			flex: 0 0 220px;
			height: 320px;
		}

		.normativas-header {
			gap: 15px;
		}

		.normativas-header h2 {
			font-size: clamp(1.8rem, 3vw, 2.5rem);
		}

		.team-member {
			grid-template-columns: 1fr;
			gap: 20px;
		}

		.member-info h3 {
			font-size: 1.8rem;
		}

		.member-info h4 {
			font-size: 1.1rem;
		}

		.member-info p {
			font-size: 1rem;
		}
	}

	@media (max-width: 768px) {
		.about-content {
			grid-template-columns: 1fr;
			gap: 40px;
			text-align: center;
		}

		.about-section,
		.mission-section,
		.vision-section,
		.normativas-section,
		.team-section,
		.team-showcase-section {
			padding: 60px 0;
		}

		.normativas-header {
			flex-direction: column;
			align-items: flex-start;
			gap: 20px;
		}

		.team-member {
			grid-template-columns: 1fr;
			gap: 30px;
			text-align: center;
		}

		.member-image img {
			max-width: 280px;
			height: auto;
		}

		.team-grid {
			grid-template-columns: 1fr;
			gap: 20px;
		}

		.team-card {
			flex-direction: column;
			text-align: center;
			padding: 25px;
			min-height: auto;
		}

		.placeholder-avatar {
			width: 100px;
			height: 100px;
			margin-bottom: 15px;
		}
	}
</style>
